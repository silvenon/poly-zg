{
  "include": ["e2e/**/*", "../playwright.config.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "types": ["node"],
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["../types", "../node_modules/@types"],

    "paths": {
      "~/*": ["../app/*"],
    },
  },
}
